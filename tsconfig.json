{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "build",
    "removeComments": true,
    "strict": false,
    "target": "esnext",
    "moduleResolution": "node",
  },
}